<div class='container'>
	<div class='row'>
		<%= render '/users/template', book: @book, user: @user %>
		<div class="col-xs-9">
			<h2 class=''>Users</h2>
			<table class="table table-hover">
				<thead>
				<tr>
					<th>Image</th>
					<th>Name</th>
					<th></th>
				</tr>
			   </thead>
			   <tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, size:'40x40', format: "jpg", fallback: "no_image.jpg" %></td>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user.id) %></td>
				</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
