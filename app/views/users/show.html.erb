<div class="container">
	<div class="row">
		<%= render '/users/template', book: @book, user: @user %>
		<div class="col-xs-9">
			<h2 class=''>Books</h2>
			<table class="table table-hover">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
					<th></th>
				</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, size:'40x40', format: 'jpg', class: "img-circle profile_image", fallback: "no_image.jpg" %>
						
					</td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
