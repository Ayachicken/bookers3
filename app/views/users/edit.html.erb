<h1>User info</h1>
<%= form_for(@user) do |f| %>
<div class="form_group">
	<P>Name:</P>
	<%= f.text_field :name, class:"form-control" %>
	<P>Image:</P>
	<%= f.attachment_field :profile_image %>
	<p>Introduction:</p>
	<%= f.text_field :introduction, class:"form-control" %>
	<%= f.submit "Update User" %>
<% end %>