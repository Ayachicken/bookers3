 <html lang='ja'>
  <head>
    <meta charaset='utf-8'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-jJ2L/Ujk8jWEwtIXPFEk3X+f20QKnj4IIscn+JZzxqkbAUC79idDdiAhAi2E7czT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='mb-5'>
    <header>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4 nav-link:hover nav.sticky-top">
          <a class="navbar-brand ml-3" href="#">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar" aria-controls="Navbar" aria-expanded="false" aria-label="ナビゲーションの切替">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="Navbar">
          <ul class='navbar-nav'>
            <li class="nav-item">
              <a class="nav-link" href="/home"><span class="fas fa-home"></span> Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users"><span class="fas fa-user"></span> Users</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/books"><span class="fas fa-book"></span> Books</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#"><span class="fas fa-sign-out-alt"></span> Logout</a>
            </li>
          </ul>
        </div>
      </nav>

    <% else %>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4 nav-link:hover nav.sticky-top">
          <a class="navbar-brand ml-3" href="#">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar" aria-controls="Navbar" aria-expanded="false" aria-label="ナビゲーションの切替">
          <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="Navbar">
            <ul class='navbar-nav'>
              <li class="nav-item">
                <a class="nav-link" href="/home"><span class="fas fa-home"></span> Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users"><span class="fas fa-user"></span> Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/books"><span class="fas fa-book"></span> Books</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"><span class="fas fa-sign-out-alt"></span> Logout</a>
              </li>
            </ul>
          </div>
        </nav>
    <% end %>

  </header>
  <div class='container'>
    <div class='row align-items-center'>
      <div class='col-lg-11'>
        <%= yield %>
        <booter class='text-right'>
        <p class='mb-0 mr-3'>CopyRight Infratop.inc</p>
        </booter>
      </div>
    </div>
  </div>
  </body>
</html>